# ============================================
# MaxOps 환경 변수 설정 파일
# 이 파일을 복사하여 .env 파일로 사용하세요
# cp .env.example .env
# ============================================

# ------------------------------------------
# PostgreSQL 설정
# ------------------------------------------
POSTGRES_USER=maxops
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=openproject

# ------------------------------------------
# OpenProject 설정
# ------------------------------------------
# 호스트 설정 (도메인:포트)
OPENPROJECT_HOST=localhost:9001

# 시크릿 키 (최소 64자 이상 필요)
# 생성 방법: openssl rand -hex 64
OPENPROJECT_SECRET=your_openproject_secret_key_base_here_minimum_64_characters_required_for_security

# HTTPS 사용 여부
OPENPROJECT_HTTPS=false

# ------------------------------------------
# Gitea 설정
# ------------------------------------------
# 도메인 설정
GITEA_DOMAIN=localhost
GITEA_SSH_DOMAIN=localhost
GITEA_ROOT_URL=http://localhost:9002/

# 보안 키 (생성 방법: openssl rand -hex 32)
GITEA_SECRET_KEY=your_gitea_secret_key_here
GITEA_INTERNAL_TOKEN=your_gitea_internal_token_here

# CI/CD Runner 등록 토큰
# Gitea 관리자 페이지에서 생성 필요
GITEA_RUNNER_TOKEN=

# ------------------------------------------
# 이메일 설정 (SMTP)
# ------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=gmail.com
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ------------------------------------------
# 기타 설정
# ------------------------------------------
# 타임존
TZ=Asia/Seoul
